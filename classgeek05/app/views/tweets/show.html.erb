        <p class="card-text"><%= @tweet.conteudo %></p>
        <p class="card-text"><%= @tweet.created_at.strftime("%d/%m/%Y - %R") %></p>
        
        
        <%= link_to 'Back', tweets_path, class:"btn btn-primary btn-sm" %>
