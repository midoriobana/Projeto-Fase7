<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3 col-auto w-25">
    <%= f.label :email, "E-mail" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>
  <div class="mb-3 col-auto w-25">
    <%= f.label :username, "Nome de usuário" %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>
  <div class="mb-3 col-auto w-25">
    <%= f.label :name, "Nome" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-3 col-auto w-25">
    <%= f.label :password, "Senha" %> <i>(Deixe esse campo em branco se não quiser alterar sua senha)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres no mínimo</em>
    <% end %>
  </div>

  <div class="mb-3 col-auto w-25">
    <%= f.label :password_confirmation, "Confirmação de senha" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="mb-3 col-auto w-25">
    <%= f.label :current_password, "Senha atual" %> <i>(Nós precisamos da sua senha atual para confirmar suas mudanças)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
  </div>


    <%= f.submit "Atualizar", class:"btn btn-success" %>

<% end %>

<br/>

<h3>Deletar minha conta</h3>

<p>Está infeliz? <%= button_to "Deletar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete, class:"btn btn-danger" %></p>

<%= link_to "Voltar", :back %>
